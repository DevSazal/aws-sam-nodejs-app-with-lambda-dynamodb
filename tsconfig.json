{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "lib": ["es2020"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // "outDir": ".aws-sam/build",
    "rootDir": "src/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "!node_modules/@types", "**/*.test.ts"]
}
